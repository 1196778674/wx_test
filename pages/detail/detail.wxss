/* pages/detail/detail.wxss */
.weui-banner{
  width: 100%;
  padding: 3%;
  padding-bottom: 0px;
}
.weui-banner image{
  width: 94%;
  height: 200px;
}

.page__bd.page__bd_spacing{
  width: 80%;
  margin-left: 10%;
  margin-bottom: 10%;
}

/* modal start */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 15%;
  left: 10%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 15rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
  position: relative;
}

.modal-title span{
  position: absolute;
  right: 10px;
  top: 5px;
  display: block;
  padding:2px 10px;
}

.modal-content {
  padding: 30rpx 32rpx;
  padding-bottom: 0;
}

.avatar-image{
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
}

.forms-input{
  margin-top: 20px;
}

.weui-cell_input{
  border-bottom: 0;
  margin-bottom: 10px;
}

.weui-cell:before{
  border-top: none;
}

.weui_radios{
  margin-left: 35px;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  line-height: 86rpx;
  padding: 15px;
}

.btn-confirm {
  color: #02AE00;
  text-align: center;
  line-height: 2.5;
  width: 70%;
  box-shadow: 0 0 5px #ccc;
}

.weui-label-user image{
  width: 25px;
  height: 25px;
  display: block;
  margin-right: 10px;
}

.weui-input {
  width: 97%;
  height:2.58823529em;
  min-height:2.58823529em;
  line-height:2.58823529em;
  border:1px solid #ccc;
  border-radius:5px;
  padding-left: 5px;
}
.weui-msg__icon-area{
  text-align: center;
  margin-bottom: 10%;
}
.success-tips{
  text-align: center;
  margin-bottom: 10%;
}
.text-tips{
  line-height: 1.3rem;
  padding: 0px 15px;
  color: #333;
  font-size: 14px;
}
.text-tips-error{
  text-align: center;
  width: 100%;
  color: #333;
  font-size: 14px;
}
/* modal end  */