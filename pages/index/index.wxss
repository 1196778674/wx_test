.navigato-item{
  width: 90%;
  height: 80%;
  /* border: 1px solid #fff;  */
  margin: 0 auto;
  background: #fff;
  border-radius: 5px; 
  margin-top: 10%;
  box-shadow: 0px 0px 10px #ccc;
  /* padding: 10px; */
  position: relative;
}
.slide-image{
  width: 94%;
  height: 35%;
  position: absolute;
  top: -3%;
  left: 3%;
  border-radius: 5px; 
  box-shadow: 0px 0px 10px #ccc;
}
.item_deriction{
  padding: 3%;
  padding-top: 50%;
}
.weui-article{
  padding: 0px;
  padding-top: 5%;
  overflow: hidden;
}
.avatar{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  display: block;
  margin: 0 auto;
}
.page__bd_spacing{
  position: absolute;
  bottom: 20px;
  width: 60%;
  left: 20%;
  z-index: 1;
}
.weui-article__p{
  text-indent: 2em;
}
.weui-cells_after-title{
  margin-top: 20px;
}

/* modal start */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 5rpx;
}

.modal-title {
  padding-top: 30rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 30rpx 32rpx;
}

.avatar-image{
  width: 70px;
  height: 70px;
  border-radius: 50%;
  margin: 0 auto;
  display: block;
}

.forms-input{
  margin-top: 20px;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  font-size: 34rpx;
  line-height: 86rpx;
  padding: 15px;
}

.btn-confirm {
  color: #02AE00;
  text-align: center;
  line-height: 2;
  width: 70%;
  box-shadow: 0 0 5px #ccc;
}
/* modal end  */